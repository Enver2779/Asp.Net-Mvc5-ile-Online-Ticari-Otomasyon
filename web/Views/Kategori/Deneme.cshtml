@model ProjeMVC.Models.SINIFLAR.Class3
@{
    ViewBag.Title = "Deneme";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script>

    $(function () {

        $('#DrpKategori').change(function () {

            var id = $('#DrpKategori').val();

            $.ajax({

                url: '/Kategori/UrunGetir/',

                data: { p: id },

                type: "POST",

                dataType: "Json",

                success: function (data) {

                    console.log(data);

                    $('#DrpUrun').empty();

                    for (var i = 0; i < data.length; i++) {

                        $('#DrpUrun').append("<option value='" + data[i].Value + "'>" + data[i].Text + "</Option>");

                    }

                }

            });

        });

    });

</script>






<br />
<div>
    <h2>Kategori-Urunler</h2>
</div>
<br />
<div>
    @Html.Label("Kategori")
    @Html.DropDownList("DrpKategori",Model.Kategoriler,"-----kategori seç----",new { @class = "form-control" })
    <br />
    @Html.Label("Ürünler")
    @Html.DropDownList("DrpUrun", Model.Urunler, "-----Urun seç----", new { @class = "form-control" })
    <br />
</div>

