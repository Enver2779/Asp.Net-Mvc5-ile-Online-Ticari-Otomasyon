@using ProjeMVC.Models.SINIFLAR
@model List<Personel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<table class="table table-bordered" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Personel Ad</th>
        <th>Personel Soyad</th>
        <th>Departman</th>
        <th>Güncelle</th>
        <th>Satış</th>
        <th>Görsel</th>
    </tr>
    @foreach (var x in Model)
    {
<tr>
    <td>@x.PersonelId</td>
    <td>@x.PersonelAd</td>
    <td>@x.PersonelSoyad</td>

    <td>@x.Departman.DepartmanAd</td>

    <td>
        <a href="/Personel/PersonelGetir/@x.PersonelId" class="btn btn-warning">Güncelle</a>
    </td>
    <td>
        <a href="/Departman/DepartmanPersonelSatıs/@x.PersonelId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a>
    </td>
    <td>
        <img src="@x.PersonelGorsel" style="width:80px;height:80px;" />
    </td>
</tr>
    }
</table>
<a href="/Personel/PersonelEkle" class="btn btn-info">Personel Ekle</a>