@using ProjeMVC.Models.SINIFLAR
@model List<KargoDetay>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />
@using (Html.BeginForm("Index", "Kargolar", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" , value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Personel</td>
            <td>@d.Alici</td>
            <td>@d.Tarih</td>
            <td>@d.TakipKodu</td>

            <td>
                <a href="/Kargolar/KargoTakip/@d.TakipKodu" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a>
            </td>
        </tr>
    }
</table>
<a href="/Kargolar/YeniKargo" class="btn btn-info">Yeni Kargo Girişi</a>