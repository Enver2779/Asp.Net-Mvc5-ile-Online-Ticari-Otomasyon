@using ProjeMVC.Models.SINIFLAR
@model List<Faturalar>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<br />

<table class="table table-bordered">
    <tr>
      
        <th>Fatura Seri No ve Sıra No</th>
        <th>Tarih</th>
        <th>Saat</th>
        <th>Toplam</th>
        <th>Detaylar</th>
        <th>Güncelle</th>
      
        <th>Yeni Kalem</th>
    </tr>
    @foreach (var f in Model)
    {
<tr>
   
    <td>@f.FaturalarSeriNo @f.FaturalarSiraNo</td>
    <td>@f.Tarih</td>
    <td>@f.Saat</td>
    <td>@f.Toplam</td>

    <td>
        <a href="/Faturalar/FaturaDetaylar/@f.FaturalarId" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a>
    </td>
    <td>
        <a href="/Faturalar/FaturaGetir/@f.FaturalarId" class="btn btn-default" style="background-color:burlywood;color:white">Güncelle</a>
    </td>
    <td>
        <a href="/Faturalar/FaturaDetaylar/@f.FaturalarId" class="btn btn-default" style="background-color: blueviolet; color: white">Kalem</a>
    </td>
</tr>
    }
</table>
<a href="/Faturalar/FaturaEkle" class="btn btn-info">Fatura Ekle</a>
<br />
<br />
<button type="button" class="btn btn-warning" style="background-color:#d95151; color:white" data-toggle="modal" data-target="#Modal1">Popup Penceresi</button>


<div class="modal" id="Modal1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="modal-title">POPUP DİALOG EKRANI</h2>
            </div>
            <div class="modal-body">
                <table class="table table-bordered">
                    <tr>
                        <th>Serino</th>
                        <th>Sirino</th>
                        <th>Tutar</th>
                    </tr>
                    @foreach (var x in Model)
                    {
                        <tr>
                            <td>@x.FaturalarSeriNo</td>
                            <td>@x.FaturalarSiraNo</td>
                            <td>@x.Toplam</td>
                        </tr>
                    }
                </table>
                <button type="button" class="btn btn-danger" data-dismiss="modal" >Tamam </button>

            </div>
        </div>
    </div>
</div>