@using ProjeMVC.Models.SINIFLAR
@model List<SatisHareket>
@{
    ViewBag.Title = "Siparislerim";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>Siparislerim</h2>

<table id="tbl1" class="table table-bordered" style="margin-top:20px">
    <thead>
        <tr>
            <th> Urun</th>         
            <th>Fiyat</th>
            <th>Tarih</th>

        </tr>
    </thead>


    @foreach (var x in Model)
    {
        <tr>

            <td>@x.Urun.UrunAd</td>
            <td>@x.Fiyat</td>
            <td>@Convert.ToDateTime(x.Tarih).ToString("dd/MM/yyyy")</td>

           
        </tr>
    }
</table>