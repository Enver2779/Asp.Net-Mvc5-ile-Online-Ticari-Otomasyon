@using ProjeMVC.Models.SINIFLAR
@model List<KargoDetay>
@{
    ViewBag.Title = "KargoTakip";
    Layout = "~/Views/Shared/_CariLayout.cshtml";
}

<h2>KargoTakip</h2>

<br />
@using (Html.BeginForm("KargoTakip", "CariPanel", FormMethod.Get))
{
    <p>
        Kargo Takip Numarası: @Html.TextBox("p")
        <input type="submit" , value="Ara" />
    </p>
}
<table class="table table-bordered">
    <tr>
        <th>Personel</th>
        <th>Alıcı</th>
        <th>Tarih</th>
        <th>Takip Kodu</th>
        <th>Detaylar</th>
    </tr>
    @foreach (var d in Model)
    {
        <tr>
            <td>@d.Personel</td>
            <td>@d.Alici</td>
            <td>@d.Tarih</td>
            <td>@d.TakipKodu</td>

            <td>
                <a href="/CariPanel/CariKargoTakip/@d.TakipKodu" class="btn btn-default" style="background-color:lightcoral;color:white">Detaylar</a>
            </td>
        </tr>
    }
</table>
